<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modelback3"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:layout_marginTop="?attr/actionBarSize">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <!--<TextView-->
            <!--android:id="@+id/txt"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_marginTop="50dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:gravity="start"-->
            <!--android:text="@string/Model_shoot_details"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingTop="6dp"-->
            <!--android:textAlignment="textStart"-->
            <!--android:textColor="@color/LightGrey"-->
            <!--android:textSize="25dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:background="@drawable/bg_reg_la"
            android:layout_marginBottom="50dp"
            android:paddingBottom="40dp"
            android:id="@+id/model_linear"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"

                android:text="@string/Model_shoot_details"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:textAlignment="textStart"
                android:textColor="@color/LightGrey"
                android:textSize="35dp"

            />


            <Button
                android:id="@+id/model_fromDate"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:drawableRight="@drawable/calender"
                android:layout_marginTop="20dp"
                android:background="@drawable/modelshootedittext_back"
                android:hint="Date"
                android:textColor="@color/LightGrey"
                android:paddingLeft="10dp"
                android:textColorHint="@color/LightGrey"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/model_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/modelshootedittext_back"
                android:gravity="start"
                android:hint="Venue"
                android:padding="20dp"
                android:textSize="24sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/LightGrey"
                android:paddingLeft="10dp"
                android:singleLine="true"

                android:imeOptions="actionNext"
                android:paddingTop="6dp"
                android:textAlignment="textStart"
                android:textColorHint="@color/LightGrey" />

            <EditText
                android:id="@+id/model_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/modelshootedittext_back"
                android:gravity="start"
                android:hint="City"
                android:padding="20dp"
                android:imeOptions="actionNext"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:textSize="24sp"
                android:textColor="@color/LightGrey"
                android:textAlignment="textStart"
                android:textColorHint="@color/LightGrey" />

            <EditText
                android:id="@+id/model_description"
                android:layout_width="match_parent"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/modelshootedittext_back"
                android:gravity="start"
                android:hint="Description"
                android:paddingLeft="10dp"
                android:textColor="@color/LightGrey"
                android:maxLines="5"
                android:textSize="24sp"
                android:paddingTop="6dp"
                android:textAlignment="textStart"
                android:textColorHint="@color/LightGrey" />

            <Button
                android:id="@+id/model_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/modelshootedittext_back"
                android:gravity="center"
                android:padding="20dp"
                android:paddingBottom="6dp"
                android:text="Submit"
                android:textColor="@color/LightGrey"
                android:textSize="24sp" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>