<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itpvt.v360.Activities.ContactUs">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/actionbar_bg"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ToolbarColoredBackArrow"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <!--<ImageView-->
                <!--android:layout_width="65dp"-->
                <!--android:layout_height="65dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/v_logo"/>-->

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/bg"
            android:background="@drawable/contact_us_bg"
            >
        </ImageView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Innovators Technologies"
                    android:textSize="24sp"
                    android:layout_gravity="start"
                    android:drawableLeft="@drawable/username2"
                    android:drawablePadding="25dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/textinactive" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+92 300 9465663"
                    android:textSize="24sp"
                    android:layout_gravity="start"
                    android:drawableLeft="@drawable/contactus_phone"
                    android:drawablePadding="25dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/textinactive" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info@itpvt.net"
                    android:textSize="24sp"
                    android:layout_gravity="start"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="25dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/textinactive" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51-C1, Faisal Town, Lahore"
                    android:textSize="24sp"
                    android:layout_gravity="start"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="25dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/textinactive" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/white"
                    android:id="@+id/submitQuery"
                    android:textSize="20sp"
                    android:text="Submit a query"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bt_background"/>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/line"
            android:id="@+id/line"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>