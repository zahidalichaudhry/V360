<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    tools:context="com.example.zohai.v360.V360Tour.TourGallery">
    <!--<com.daimajia.slider.library.SliderLayout-->
    <!--android:id="@+id/slider"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="200dp"-->
    <!--android:layout_marginBottom="30dp"-->
    <!--android:layout_marginTop="5dp" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/blackborder"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/e_model"
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/modelshoot"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/blackborder"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/e_marriage"
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/wedding2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/blackborder"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/e_party"
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/reg_part"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/blackborder"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/e_exibition"
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:background="@drawable/exhibition_2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <!--<android.support.v7.widget.RecyclerView-->
