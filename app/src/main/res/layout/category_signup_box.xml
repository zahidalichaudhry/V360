<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text="Register As User"
        android:background="@drawable/button_copy"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="16sp"
        android:id="@+id/user"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Register As Model"
        android:background="@drawable/button_copy"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/model"/>
    <TextView
    android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
    android:text="Register As Photographer"
    android:background="@drawable/button_copy"
    android:gravity="center"
    android:textSize="16sp"
    android:textStyle="italic"
    android:id="@+id/photog"/>
    <TextView
        android:layout_width="250dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:text="Register As Designer"
        android:background="@drawable/button_copy"
        android:gravity="center"
        android:textSize="16sp"

        android:textStyle="italic"
        android:id="@+id/designer"/>
    <TextView
        android:layout_width="250dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:text="Register As MakeUp Artist"
        android:background="@drawable/button_copy"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="italic"
        android:id="@+id/art"/>

</LinearLayout>
