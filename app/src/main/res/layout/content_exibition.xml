

<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/splash_bg"
    android:layout_marginTop="?attr/actionBarSize">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/ransblack"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_reg_la"
            android:layout_marginBottom="50dp"
            android:paddingBottom="30dp"
            android:id="@+id/model_linear"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"

                android:text="@string/Model_shoot_details"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:textAlignment="textStart"
                android:textColor="@color/LightGrey"
                android:textSize="25dp"

                />
            <!--<ImageView-->
                <!--android:layout_width="105dp"-->
                <!--android:layout_height="105dp"-->
                <!--android:gravity="center"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:background="@drawable/v_logo"/>-->

            <Button
                android:id="@+id/fromDate"
                android:background="@drawable/modelshootedittext_back"
                android:textColor="@color/LightGrey"
                android:drawableRight="@drawable/calender"
                android:padding="10dp"
                android:text="From"
                android:textSize="14sp"

                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/toDate"

                android:background="@drawable/modelshootedittext_back"
                android:textColor="@color/LightGrey"
                android:drawableRight="@drawable/calender"
                android:padding="10dp"
                android:text="To"
                android:textSize="14sp"

                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/city"
                android:background="@drawable/modelshootedittext_back"
                android:textColor="@color/LightGrey"
                android:hint="Enter City"
                android:singleLine="true"
                android:textColorHint="@color/LightGrey"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:maxLines="1"

                android:layout_width="match_parent"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textAlignment="textStart"
                />

            <EditText
                android:id="@+id/description"
                android:background="@drawable/modelshootedittext_back"
                android:textColor="@color/LightGrey"
                android:textColorHint="@color/LightGrey"
                android:hint="Description"




                android:layout_width="match_parent"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:gravity="start"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textAlignment="textStart"


                />

            <Button
                android:id="@+id/submit"

                android:background="@drawable/modelshootedittext_back"
                android:textColor="@color/LightGrey"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="Submit"
                android:textSize="18sp"



                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_gravity="start"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                />

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="100dp">-->
            <!--</LinearLayout>-->

        </LinearLayout>

    </ScrollView>

</ScrollView>
